# Database Configuration
# For local development:
MONGO_URI=mongodb://localhost:27017/jobleap
# For MongoDB Atlas (production):
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/jobleap?retryWrites=true&w=majority

# JWT Configuration
# IMPORTANT: Generate a strong secret for production using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secure_jwt_secret_key_here_should_be_at_least_64_characters_long_replace_this

# Server Configuration
PORT=5000
NODE_ENV=development

# OAuth Configuration (Google Cloud Console)
# 1. Go to https://console.cloud.google.com/
# 2. Create a new project or select existing
# 3. Enable Google+ API
# 4. Create OAuth 2.0 credentials
# 5. Add authorized redirect URI: http://localhost:5000/api/auth/google/callback
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Frontend URL (for CORS and OAuth redirects)
FRONTEND_URL=http://localhost:5173

# Production URLs (uncomment for deployment)
# FRONTEND_URL=https://yourdomain.com

# Groq API Configuration (for ATS Resume Checker)
# Get your API key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Adzuna API Configuration (optional - for additional job listings)
# Get your API keys from: https://developer.adzuna.com/
ADZUNA_APP_ID=your_adzuna_app_id_here
ADZUNA_APP_KEY=your_adzuna_app_key_here

# Resend API Configuration (for email notifications)
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here