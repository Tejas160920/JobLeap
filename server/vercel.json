{
  "version": 2,
  "installCommand": "npm install",
  "rewrites": [
    {
      "source": "/api/cron/job-alerts",
      "destination": "/api/cron/job-alerts"
    },
    {
      "source": "/api/cron/refresh-jobs",
      "destination": "/api/cron/refresh-jobs"
    },
    {
      "source": "/(.*)",
      "destination": "/api/index.js"
    }
  ],
  "functions": {
    "api/index.js": {
      "maxDuration": 60
    },
    "api/cron/job-alerts.js": {
      "maxDuration": 300
    },
    "api/cron/refresh-jobs.js": {
      "maxDuration": 300
    }
  }
}
